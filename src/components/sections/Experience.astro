---
import Section from "@/components/Section.astro";
import { getLocalizedData } from "@/services/utils";

// Llama a la funci√≥n para obtener los datos localizados
const { cvData, content } = await getLocalizedData(Astro.request.url);

// Desestructurar los datos
const work = cvData.work;
---

<Section title={content.Experience.title}>
  <ul class="flex flex-col gap-8">
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights, url }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear = endDate ? new Date(endDate).getFullYear() : "Actual";

          return (
            <li>
              <article>
                <header class="flex justify-between items-start mb-1">
                  <div>
                    <h3 class="font-medium text-gray-900">
                      <a
                        href={url}
                        title={`Ver ${name}`}
                        target="_blank"
                        class="text-gray-900 hover:underline"
                      >
                        {name}
                      </a>
                    </h3>
                    <h4 class="text-gray-700 font-normal">{position}</h4>
                  </div>

                  <div>
                    <time
                      class="text-gray-400 text-sm min-w-28 cursor-default"
                      datetime={startDate}
                      data-title={startDate}
                    >
                      {startYear}
                    </time>
                    {" - "}
                    <time
                      class="text-gray-400 text-sm min-w-28 cursor-default"
                      datetime={endDate}
                      data-title={endDate}
                    >
                      {endYear}
                    </time>
                  </div>
                </header>

                <footer>
                  <p>{summary}</p>
                </footer>
                <footer class="flex flex-wrap gap-1 text-xs mt-5">
                  {highlights.map((highlight) => {
                    return (
                      <span class="rounded-md bg-gray-200 text-gray-600 text-xs font-medium py-1 px-3">
                        {highlight}
                      </span>
                    );
                  })}
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  [data-title]:hover:after {
    opacity: 1;
    transition: all 0.1s ease-in-out 0.5s;
    visibility: visible;
  }

  [data-title]:after {
    content: attr(data-title);
    background-color: #333;
    color: #fff;
    font-size: 0.75rem;
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      monospace;
    position: absolute;
    padding: 0.2rem 0.5rem;
    bottom: -1.4rem;
    left: 50%;
    white-space: nowrap;
    box-shadow: 1px 1px 1px #222222;
    opacity: 0;
    border: 1px solid #111111;
    z-index: 99999;
    visibility: hidden;
    border-radius: 6px;
  }

  [data-title] {
    position: relative;
  }
</style>
